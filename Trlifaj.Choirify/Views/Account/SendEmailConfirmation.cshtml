@model SendEmailConfirmationViewModel
@{
    ViewData["Title"] = "Poslat potvrzovací email";
}

<h2>@ViewData["Title"]</h2>
<h4>Nepotvrdil si svůj účet kliknutím na odkaz v potvrzovacím emailu.</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
            <button type="submit" class="btn btn-default">Poslat email</button>
        </form>
    </div>
</div>