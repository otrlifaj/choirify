@model Trlifaj.Choirify.ViewModels.UserViewModels.UserDetailEditViewModel

@{
    ViewData["Title"] = "Smazat uživatele";
}

<h2>Opravdu chceš smazat uživatele?</h2>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
        </dt>
        @if (Model.IsSinger)
        {
            <dd>Zpěvák</dd>
        }
        else if (Model.IsChoirmaster)
        {
            <dd>Sbormistr</dd>
        }
        else
        {
            <dd></dd>
        }
        <dt>
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="UserId" />
        <input type="hidden" asp-for="ChoirmasterId" />
        <input type="hidden" asp-for="SingerId" />
        <input type="submit" value="Smazat" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-default">Seznam uživatelů</a>
    </form>
</div>
