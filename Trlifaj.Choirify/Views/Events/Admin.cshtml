@model IEnumerable<Trlifaj.Choirify.ViewModels.EventViewModels.AdminEventListViewModel>

@{
    ViewData["Title"] = "Správa událostí";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-success">Přidat</a>
    <span class="btn-group pull-right" role="group">
        <a asp-action="Admin" asp-route-filter="upcoming" class="btn btn-primary">Nadcházející</a>
        <a asp-action="Admin" asp-route-filter="all" class="btn btn-primary">Všechny</a>
    </span>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="hidden-xs hidden-sm">
                @Html.DisplayNameFor(model => model.Place)
            </th>
            <th class="hidden-xs hidden-sm">
                @Html.DisplayNameFor(model => model.From)
            </th>
            <th class="hidden-xs hidden-sm">
                @Html.DisplayNameFor(model => model.To)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            Html.RenderPartialAsync("/Views/Events/Shared/_AdminEventListItemPartial.cshtml", item);
        }
    </tbody>
</table>
