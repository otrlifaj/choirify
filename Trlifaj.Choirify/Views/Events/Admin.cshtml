@model IEnumerable<Trlifaj.Choirify.ViewModels.EventViewModels.AdminEventListViewModel>

@{
    ViewData["Title"] = "Správa událostí";
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-success">Přidat</a>
    <span class="btn-group pull-right" role="group">
        <a asp-action="Admin" asp-route-filter="upcoming" class="btn btn-primary">Nadcházející</a>
        <a asp-action="Admin" asp-route-filter="all" class="btn btn-primary">Všechny</a>
    </span>
</p>
<div class="hidden-md hidden-lg">
    <table class="col-xs-12 table table-striped table-hover">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @await Html.PartialAsync("/Views/Events/Shared/_AdminEventCard.cshtml", item)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<table class="table table-striped table-hover hidden-xs hidden-sm">
    <tbody>
        @foreach (var item in Model)
        {
            await Html.RenderPartialAsync("/Views/Events/Shared/_AdminEventListItemPartial.cshtml", item);
        }
    </tbody>
</table>
