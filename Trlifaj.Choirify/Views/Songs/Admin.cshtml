@model IEnumerable<Trlifaj.Choirify.ViewModels.SongViewModels.AdminSongListViewModel>

@{
    ViewData["Title"] = "Správa skladeb";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Přidat</a>
    <span class="btn-group pull-right" role="group">
        <a asp-action="Admin" asp-route-filter="current" class="btn btn-primary">Aktuální</a>
        <a asp-action="Admin" asp-route-filter="all" class="btn btn-primary">Všechny</a>
    </span>
</p>
<div class="hidden-md hidden-lg">
    <table class="col-xs-12 table table-striped table-hover">
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @await Html.PartialAsync("/Views/Songs/Shared/_AdminSongCard.cshtml", item)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<table class="table table-striped table-hover hidden-xs hidden-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="hidden-xs">
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th class="text-center hidden-xs">
                @Html.DisplayNameFor(model => model.Current)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.SheetsAvailable)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.CountOfOrders)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.MissingCopies)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            await Html.RenderPartialAsync("/Views/Songs/Shared/_AdminSongListItemPartial.cshtml", item);
        }
    </tbody>
</table>