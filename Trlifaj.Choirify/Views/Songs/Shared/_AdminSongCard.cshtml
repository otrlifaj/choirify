@model AdminSongListViewModel

<div class="row">
    <div class="col-xs-9 col-sm-9">
        <div class="row">
            <div class="col-xs-12">
                <strong>
                    @Html.DisplayFor(modelItem => Model.Name)
                </strong>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-7">
                @Html.DisplayFor(modelItem => Model.Author)
            </div>
            <div class="col-xs-5">
                @Html.DisplayNameFor(modelItem => Model.Current):
                @if (Model.Current == true)
                {
                    <i class="fas fa-check fa-1x text-success"></i>
                }
                else
                {
                    <i class="fas fa-times fa-1x text-danger"></i>
                }
            </div>
        </div>
        <div class="row">
            <div class="col-xs-5 col-xs-offset-3">
                Skříň:
            </div>
            <div class="col-xs-2">
                <strong>
                    @Html.DisplayFor(modelItem => Model.SheetsAvailable)
                </strong>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-5 col-xs-offset-3">
                Obejdnávky:
            </div>
            <div class="col-xs-2">
                <strong>
                    @Html.DisplayFor(modelItem => Model.CountOfOrders)
                </strong>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-5 col-xs-offset-3">
                Chybí:
            </div>
            <div class="col-xs-2">
                <strong class="text-danger">
                    @Html.DisplayFor(modelItem => Model.MissingCopies)
                </strong>
            </div>
        </div>
    </div>
    <div class="col-xs-3 col-sm-3">
        <div class="btn-group-vertical pull-right" role="group">
            <a asp-action="Sheets" asp-route-id="@Model.Id" class="btn btn-warning">Noty</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-default">Upravit</a>
            <a asp-action="AdminDetails" asp-route-id="@Model.Id" class="btn btn-info">Detail</a>
        </div>
    </div>
</div>