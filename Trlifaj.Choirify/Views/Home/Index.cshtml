@{
    ViewData["Title"] = "Smíšený komorní sbor Univerzity Palackého v Olomouci";
}

@if (User.Identity.IsAuthenticated)
{
    ViewData["Title"] = "Rozcestník";
    <div class="navigation-page">
        <div class="row">
            @await Html.PartialAsync("/Views/Home/Partials/_EventsHomepageCardPartial.cshtml")
            @await Html.PartialAsync("/Views/Home/Partials/_SongsHomepageCardPartial.cshtml")
            @await Html.PartialAsync("/Views/Home/Partials/_SingersHomepageCardPartial.cshtml")
        </div>

        <div class="row">
            @await Html.PartialAsync("/Views/Home/Partials/_AdminHomepageCardPartial.cshtml")
            @await Html.PartialAsync("/Views/Home/Partials/_SongsManagementHomepageCardPartial.cshtml")
            @await Html.PartialAsync("/Views/Home/Partials/_DressCodeHomepageCardPartial.cshtml")
        </div>
        <div class="row">
            @*TODO informace o aktuálních událostech atd. zde*@
        </div>
    </div>
}
else
{
    <div class="navigation-page">
        <div class="row">
            <div class="col-md-4">
                <div class="text-center homepage-menu-item-container">
                    <a class="homepage-menu-link" asp-area="" asp-controller="Account" asp-action="Login">
                        <i class="fas fa-door-open fa-8x"></i>
                        <h2>Přihlásit se</h2>
                    </a>
                </div>
            </div>
            <div class="col-md-4">
                <div class="text-center homepage-menu-item-container">
                    <a class="homepage-menu-link" asp-area="" asp-controller="Account" asp-action="Register">
                        <i class="fas fa-user-plus  fa-8x"></i>
                        <h2>Registrovat se</h2>
                    </a>
                </div>
            </div>
        </div>
    </div>
}