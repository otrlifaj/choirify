(User.IsInRole(Roles.Admin)
|| User.IsInRole(Roles.Chairman)
|| User.IsInRole(Roles.ViceChairman)))
{
    <div class="col-md-4">
        <div class="text-center homepage-menu-item-container">
            <a class="homepage-menu-link" asp-area="" asp-controller="Home" asp-action="Admin">
                <i class="fas fa-user-cog  fa-8x"></i>
                <h2>Administrátor</h2>
            </a>
        </div>
    </div>
}