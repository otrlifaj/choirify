<div class="col-md-4">
    <div class="text-center homepage-menu-item-container">
        @if (User.Identity.IsAuthenticated && User.IsInRole(Roles.Singer))
        {
            <a class="homepage-menu-link" asp-area="" asp-controller="Events">
                <i class="far fa-calendar-alt fa-8x"></i>
                <h2>Události</h2>
            </a>
        }
        else if (User.Identity.IsAuthenticated && User.IsInRole(Roles.Choirmaster))
        {
            <a class="homepage-menu-link" asp-area="" asp-controller="Events" asp-action="Choirmaster">
                <i class="far fa-calendar-alt fa-8x"></i>
                <h2>Události</h2>
            </a>
        }
        else
        {
            <i class="far fa-calendar-alt fa-8x"></i>
            <h2>Události</h2>
        }
    </div>
</div>